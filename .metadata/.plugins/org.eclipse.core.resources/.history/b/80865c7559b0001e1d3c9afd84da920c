package com.khit.study.controller;



import java.util.ArrayList;
import java.util.List;

import org.springframework.web.bind.annotation.GetMapping;
import org.springframework.web.bind.annotation.RestController;

import com.khit.study.entity.BoardVO;

//문자열을 반환하는 어노테이션
//위치 : 메서드에 위치함 - @ResponseBody, @ResponseEntity와 비슷함
@RestController
public class BoardController {

	@GetMapping("/greeting")
	public String sayHello(String name) {
		return "hello" + name;		//문자열 rest가 붙어있기때문에
	}
	
	//객체 데이터를 브라우저에 보내줌
	@GetMapping("/board/detail")
	public BoardVO getBoard() {
		//게시글 1건 생성
		BoardVO board = new BoardVO();
		board.setId(1);
		board.setTitle("제목");
		board.setWriter("글쓴이");
		board.setContent("내용");
		board.setCreatedDate(new Date());
		return board;
	}
	
	@GetMapping("/board/list")
	public List<BoardVO> gerBoardList(){
		List<BoardVO> boardList = new ArrayList<>();
		for(int i = 1; i<=10; i++) {
			BoardVO board = new BoardVO();
			board.setId(i);
			board.setTitle("제목" + i);
			board.setWriter("글쓴이");
			board.setContent(i + "내용임");
			board.setCreatedDate(new Date());
			boardList.add(board);
		}
		return boardList;
	}
	
}
